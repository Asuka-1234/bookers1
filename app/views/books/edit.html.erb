<div class="editing-book">
	<h1>Editing Book</h1>
</div>

<div>
	<% if @book.errors.any? %>
	<div  class="alert alert-warning">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<div class="error">
			   <li><%= message %></li>
			</div>
			<% end %>
		</ul>
	</div>
	<% end %>
</div>

<div>
	<%= form_for(@book) do |f| %>
	<div class="detail">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>

	<div class="detail">
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>
	<div class="update-book">
		<%= f.submit 'Update Book' %>
	</div>

	<% end %>

	<div class="link">
		<%= link_to "Show", book_path(@book) %>
		<span>|</span>
		<%= link_to "Back", books_path(@books) %>
	</div>

</div>