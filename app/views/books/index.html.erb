<div class="new">
	<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
	<% end %>
	<div class="headline">
		<h1>Books</h1>
	</div>

<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
	</tr>
	<% @books.each do |f| %>
	<tr>
		<td class="post">
			<%= f.title %>
		</td>
		<td class="post">
			<%= f.body %>
		</td>
		<td class="action">
			<%= link_to "Show", book_path(f) %>
			<%= link_to "Edit", edit_book_path(f) %>
			<%= link_to "Destroy", book_path(f), method: :delete %>
		</td>
	</tr>
	<% end %>
</table>

<div class="post2">
	<h2>New book</h2>
</div>
<div>
	<% if @book.errors.any? %>
	<div  class="alert alert-warning">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<div class="error">
			   <li><%= message %></li>
			</div>
			<% end %>
		</ul>
	</div>
	<% end %>
</div>
    <%= form_for(@book) do |r| %>
    <div class="detail">
    	<h4>Title</h4>
    	<%= r.text_field :title %>
    </div>
    <div class="detail">
    	<h4>Body</h4>
    	<%= r.text_area :body %>
    </div>
    <div class="create-book">
    	<%= r.submit 'Create Book' %>
	</div>

<% end %>

</div>